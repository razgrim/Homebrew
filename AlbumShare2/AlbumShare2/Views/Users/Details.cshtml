@model AlbumShare2.Models.User

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.phonenum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.phonenum)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.posts)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.posts.Count)
        </dd>
    </dl>
    <h4>Posts</h4>
    <hr />
    <ul>
        @foreach (var post in Model.posts)
        {
            <li>@post.body</li>
        }
    </ul>
    <h4>Albums</h4>
    <hr />
    <ul>
        @foreach (var album in Model.albums)
        {
            <li>
                <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id">@album.title</a>
            </li>
        }
    </ul>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
