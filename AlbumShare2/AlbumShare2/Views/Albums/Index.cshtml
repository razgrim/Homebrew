@model IEnumerable<AlbumShare2.Models.Album>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Preview
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)<br />
                @Html.DisplayNameFor(model => model.User.name)
                @Html.DisplayNameFor(model => model.User.email)
                @Html.DisplayNameFor(model => model.User.phonenum)
                @Html.DisplayNameFor(model => model.User.address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string url = "images/image15.jpg";
            try { url = item.Images.First().url; }
            catch { }
        
            <tr>
                <td>
                    <img src="@url" height="100" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
